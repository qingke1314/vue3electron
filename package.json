{
  "name": "secNote",
  "version": "1.0.5-17",
  "private": true,
  "main": "dist-electron/main.js",
  "author": "Sec <1774079811@qq.com>",
  "description": "您的云笔记小窝",
  "scripts": {
    "build": "npm version prerelease && vue-tsc && vite build && electron-builder && node build/js/upload.js",
    "dev": "vite",
    "preview": "vite preview",
    "upload": "node build/js/upload.js",
    "uploadWeb": "bash build/shell/webUpload.sh"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "@tinymce/tinymce-vue": "^5.1.1",
    "axios": "^1.9.0",
    "dompurify": "^3.2.5",
    "electron-log": "^5.4.0",
    "electron-updater": "^6.1.7",
    "element-plus": "^2.9.9",
    "marked": "^15.0.12",
    "pinia": "^3.0.2",
    "vue": "^3.4.21",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "electron": "^20.3.8",
    "electron-builder": "^24.13.3",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.3",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-vue": "^10.1.0",
    "prettier": "^3.5.3",
    "sass": "^1.87.0",
    "sass-loader": "^16.0.5",
    "typescript": "^5.2.2",
    "unplugin-auto-import": "^19.1.2",
    "unplugin-vue-components": "^28.5.0",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^2.0.26"
  },
  "build": {
    "appId": "com.mydevdocs.app",
    "productName": "SecNote",
    "publish": {
      "provider": "generic",
      "url": "http://118.178.197.208:9981/updates",
      "channel": "latest",
      "useMultipleRangeRequest": false
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icons/icon.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icons/icon.png"
    },
    "afterAllArtifactBuild": null,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "asar": true
  }
}
